<%= form_with model: log do |f| %>
	<%= f.label :name, class: "sr-only" %>
	<%= f.text_field :name,
								   class: "form-control",
									 placeholder: "e.g. Take a 'quick' nap" %>
	<div class="input-group">
	</div>
	<%= f.hidden_field :started_at %>
	<%= f.hidden_field :stopped_at %>
	<div class="mt-4">
		<%= f.submit "Done", class: "btn btn-primary btn-lg" %>
		<%= link_to "Cancel",
							  timer_path,
								role: "button",
								class: "btn btn-outline-secondary btn-lg" %>
	</div>
<% end %>
