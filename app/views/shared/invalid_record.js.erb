resetFormState();
$logSection = $(".logs-section");
$logNameInput = $logSection.find("#log_name");
$logMinutesInput = $logSection.find("#log_minutes");
$tagNameInput = $("#tag_name");

if ($logNameInput.val() == "") {
	$("h1:eq(1)").addClass("text-danger");
	$logNameInput.addClass("input-error");
	$nameFeedback = $("<div>", { class: "invalid-feedback d-block" });
	$nameFeedback.html("Please write what you worked on.");
	$nameFeedback.insertAfter($logNameInput);
}

if ($logMinutesInput.val() == "") {
	$("h1:eq(2)").addClass("text-danger");
	$logMinutesInput.addClass("input-error");
	$minutesFeedback = $("<div>", { class: "invalid-feedback d-block" });
	$minutesFeedback.html("Please write how long it took.");
	$minutesFeedback.insertAfter($logMinutesInput);
}

if (parseInt($logMinutesInput.val()) < 1) {
	$("h1:eq(2)").addClass("text-danger");
	$logMinutesInput.addClass("input-error");
	$minutesFeedback = $("<div>", { class: "invalid-feedback d-block" });
	$minutesFeedback.html("Please write a number greater than 0.");
	$minutesFeedback.insertAfter($logMinutesInput);
}

if ($tagNameInput.val() == "") {
	$("h1:eq(1)").addClass("text-danger");
	$tagNameInput.addClass("input-error");
	$nameFeedback = $("<div>", { class: "invalid-feedback d-block" });
	$nameFeedback.html("Please give your new tag a name.");
	$nameFeedback.insertAfter($tagNameInput);
}

function resetFormState() {
	$(".invalid-feedback").remove();
	$(".form-control").removeClass("input-error");
	$(".logs-section").find("h1").removeClass("text-danger");
}
