<% if unit == "total_hours" %>
	<%= link_to "#{log.total_hours(current_user)} total hours",
							conversion_path(log, unit: unit),
							class: "text-dark",
							title: "Click to see the minutes, hours, or total hours this log",
							remote: true %>
<% else %>
	<%= link_to "#{log.send(unit)}#{letter}",
							conversion_path(log, unit: unit),
							class: "text-dark",
							title: "Click to see the minutes, hours, or total hours this log",
							remote: true %>
<% end %>
